@{
    var requirement = new EditRequirement();
    foreach (var document in Model)
    {
        if (await AuthorizationService.AuthorizeAsync(User, document, requirement))
        {
            <p>@Html.ActionLink("Document #" + document.Id, "Edit", new { id = document.Id })</p>
